<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal">
<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title>${project} Application</title>
<meta name="keywords" content="python web application" />
<meta name="description" content="repoze.bfg web application" />
<link href="${request.application_url}/static/default.css" rel="stylesheet" type="text/css" />
</head>
<body>
<!-- start header -->
<div id="logo">
  <h2><code>${project}</code>, a <code>repoze.bfg</code> application</h2>
</div>
<div id="header">
  <div id="menu">
    <ul>
      <li><a href="${request.application_url}">Up to top</a></li>
      <li><a href="${page_edit_url}">Edit Page</a></li>
      <li><a href="${page_edit_dc_url}">Edit DublinCore</a></li>
    </ul>
  </div>
</div>
<!-- end header -->
<div id="wrapper">
  <!-- start page -->
  <div id="page">
    <!-- start content -->
    <div id="content">
      <div class="post">
	Name: ${page.__name__}
      </div>
      <div id="data">
	${page.data}
      </div>
    </div>
    <!-- end content -->
    <!-- start sidebar -->
    <div id="sidebarXXX">
      <h2>DublinCore</h2>
      <ul>
	<tal:block tal:repeat="k,v page.dublincore.items()">
	  <span tal:condition="v|None">
	    <li>${k}: ${v}</li>
	  </span>
	</tal:block>
      </ul>
    </div>
    <!-- end sidebar -->
    <div style="clear: both;">&nbsp;</div>
  </div>
</div>
<!-- end page -->
<!-- start footer -->
<div id="footer">
[footer]
</div>
<!-- end footer -->
</body>
</html>
